#!/bin/bash

if [ -f $HOME/.dmenurc ]; then
    . $HOME/.dmenurc
else
    DMENU='dmenu -i'
fi

result=`printf "choose program\ngoogle\nchoose music\nchoose wifi\nscreenshot\nnow playing\ntoggle sound\nsleep\nhibernate\nshutdown" | eval $DMENU`
case $result in
    choose\ program)
        dmenu_run -i -s 3 -x "$X" -y "$Y" -w "$WIDTH" -l 15 -dim 0.8 -p "Programs: " -fn "$FONT" -nb "$NB" -nf "$NF" -sb "$SB" -sf "$SF"
        ;;
    choose\ music)
        /home/nick/.bin/dmenu_mpd
        ;;
    screenshot)
		instagram -s 0
        ;;
    choose\ wifi)
        nmcli_dmenu
        ;;
    now\ playing )
        /home/nick/.bin/mpdzen/mpdzen
        ;;
    toggle\ sound )
        /home/nick/.bin/volume -t
        ;;
    sleep )
        gksu systemctl suspend
        ;;
    hibernate )
        gksu systemctl hibernate
        ;;
    shutdown )
        gksu shutdown now
        ;;
    google )
        /home/nick/.bin/dmenu_google
        ;;
    *)
        ;;
    esac
