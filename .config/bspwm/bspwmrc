#! /bin/sh

bspc config border_width 2
bspc config window_gap   8
bspc config normal_frame_opacity 0.5
bspc config focused_Frame_opacity 0.3
bspc config normal_border_color "#332d29"
bspc config active_border_color "#817267"
bspc config focused_border_color "#504339"
bspc config presel_border_color "#9a875f"
bspc config urgent_border_color "#9f7155"
bspc config focused_locked_border_color "#9a875f"

i=1
for monitor in $(bspc query -M); do
bspc monitor $monitor \
        -n "$i" \
        -d {•,•,•}
        #-d 
        #-d $i/{I,II}
    let i++
done
NMON=$i
unset i

bspc config top_padding 20

bspc config split_ratio         0.50
bspc config borderless_monocle  true
bspc config gapless_monocle     true
bspc config focus_follows_pointer true
bspc config adaptative_raise true

bspc rule -a Feh floating=true center=true
bspc rule -a magic floating=true center=true #Floating terminal
bspc rule -a Nitrogen floating=true center=true
bspc rule -a Lxappearance floating=true center=true
bspc rule -a Steam floating=true 


/home/nick/.config/bspwm/panel &
 
