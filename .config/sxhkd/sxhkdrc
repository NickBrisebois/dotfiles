#
# bspwm hotkeys
#

#Quit bspwm
alt + super + Escape
	bspc quit

#Kill Window
alt + x
	bspc window -c

#Monocle toggle
alt + t
	bspc desktop -l next

alt + b
	bspc desktop -B

alt + {s,f}
	bspc window -t {floating,fullscreen}

alt + {grave,Tab}
	bspc {window,desktop} -f last

alt + apostrophe
	bspc window -s last

alt + {o,i}
	bspc control --record-history off; \
	bspc window {older,newer} -f; \
	bspc control --record-history on

alt + y
	bspc window -w last.manual

alt + m
	bspc window -s biggest


#Navigate windows
alt + {_,shift + }{h,j,k,l}
	bspc window -{f,s} {left,down,up,right}

alt + {_,shift + }{Left,Down,Up,Right}
    bspc window -{f,s} {left,down,up,right}

alt + {comma,period}
    bspc desktop -F {horizontal,vertical}

alt + bracket{left,right}
	bspc desktop -f {prev,next}

alt + ctrl + {h,j,k,l}
	bspc window -p {left,down,up,right}

alt + ctrl + {_,shift + }space
	bspc {window -p cancel,desktop -c}

alt + super + {Left,Down,Up,Right}
	bspc window -e {left -20,down +20,down -20,left +20}

alt + {v, c}
    bspc window -p {right, down}

alt + ctrl + {1-9}
	bspc window -r 0.{1-9}

alt + {_,shift + }{1-9,0}
	bspc {desktop -f,window -d} ^{1-9,10}

~button1
	bspc pointer -g focus

alt + button{1-3}
	bspc pointer -g {move,resize_side,resize_corner}

alt + !button{1-3}
	bspc pointer -t %i %i

alt + @button{1-3}
	bspc pointer -u

alt + {minus,equal}
    bspc config -d focused window_gap $((`bspc config -d focused window_gap` {+,-} 2 ))

alt + ctrl + {Left,Down,Up,Right}
    bspc window -p {left,down,up,right}


#
# wm independent hotkeys
#

#Normal terminal
alt + Return
   urxvt 

#Floating terminal
alt + shift + Return
   urxvt -name 'magic'

#Run launcher
alt + d 
	dmenu_run -i -x 5 -y 25 -w 250 -q -l 5 -p "> " -fn "DejaVu Sans Mono:size=8" -nb "#181512" -nf "#9a875f" -sb "#181512" -sf "#9a875f"

# make sxhkd reload its configuration files:
alt + Escape
	pkill -USR1 -x sxhkd

#Screenshot
Print 
    scot -s

#Volume Keys
XF86AudioRaiseVolume
    amixer set Master 5+ 

XF86AudioLowerVolume
    amixer set Master 5-

XF86AudioMute 
    amixer set Master toggle

#Media Keys
XF86AudioPlay
    mocp --toggle-pause

XF86AudioNext
    mocp --next

XF86AudioPrev
    mocp --previous
